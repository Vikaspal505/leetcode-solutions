//------  ------ - --- -c code ---------------

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* addBinary (char* a,char*b){
    int m =  strlen(a) - 1;
    int n = strlen(b) - 1;
    int carry = 0;
    int maxLen = (strlen(a) > strlen(b) ? strlen (a) : strlen(b)) + 2;
    char* result = ( char*)malloc(maxLen);
    int idx = 0;

    while(m >= 0 || n >= 0 || carry){
        int sum = carry;

        if (m >= 0) sum += a[m--] - '0';
        if(n >= 0) sum += b[n--] - '0';

        result[idx++] = (sum % 2) + '0';
        carry = sum / 2;

    }
    for (int i = 0; i< idx /2; i++){
        char temp = result [i];
        result[i] = result[idx -i-1];
        result[idx- i -1] = temp;

    }
    result[idx] = '\0';
    return result ;

    }
